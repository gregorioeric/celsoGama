<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>

  <body>
    <%- include('components/header') %>
    <main>
      <div class="content-form">
        <h1>Upload de Imagens</h1>
        <form
          action="/uploadImages"
          enctype="multipart/form-data"
          method="post"
        >
          <div class="input-upload">
            <label for="user-upload"></label>
            <input
              type="file"
              name="user_upload"
              class="user-upload"
              id="user-upload"
            />
          </div>
          <% if(message.msgUpload) { %>
          <div class="msgError"><%= message.msgUpload %></div>
          <% } %>
          <div class="content-btn" id="btn-cad">
            <button>Upload</button>
          </div>
        </form>
      </div>
    </main>
    <%- include('components/footer') %>
  </body>
</html>
