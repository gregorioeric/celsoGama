<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>
  <body>
    <main>
      <h1>Admin</h1>
      <div class="form-admin">
        <form action="/admin" method="post" class="form">
          <div class="form-group">
            <div class="input">
              <input
                type="text"
                name="admin_login"
                class="admin-login"
                id="admin-login"
              />
              <label for="admin-login">Admin Login</label>
            </div>
            <div class="input">
              <input
                type="password"
                name="admin_password"
                class="admin-password"
                id="admin-password"
              />
              <label for="admin-password">Admin Password</label>
            </div>
            <div class="btn-group">
              <div class="btn">
                <button>Login</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
