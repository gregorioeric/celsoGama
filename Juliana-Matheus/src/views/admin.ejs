<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>
  <body>
    <main>
      <h1>admin</h1>
      <div class="form-admin">
        <form action="/admin" method="post" class="form">
          <div class="form-group">
            <div class="input">
              <input
                type="text"
                name="admin_email"
                class="admin-email"
                id="admin-email"
                placeholder=""
              />
              <label for="admin-email">Admin Login</label>
            </div>
            <div class="input">
              <input
                type="password"
                name="admin_password"
                class="admin-password"
                id="admin-password"
                placeholder=""
              />
              <label for="admin-password">Admin Password</label>
            </div>
            <div class="btn-group">
              <button>Login</button>
            </div>
          </div>
          <% if (msgError) { %>
             <div class="msgError"><div><%= msgError %></div> 
             <% } %> <% if(msgSuccess) { %>
              <div class="msgSuccess"><% msgSuccess %></div>
              <% } %>
        </form>
      </div>
    </main>
  </body>
</html>
