<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>
  <body>
    <main>
      <%- include('components/header') %>
      <section>
        <div class="content-main home">
          <h1>Livros</h1>
          <div class="all-books">
            <% if (results) { results.forEach(livro => { %>
            <div class="book">
              <div class="book-img">
                <img src="<%= livro.book_image %>" alt="" />
              </div>
              <div class="book-info">
                <h3><%= livro.book_name %></h3>
                <p><%= livro.book_autor %></p>
              </div>
              <div class="btn-book">
                <button>Ver Livro</button>
              </div>
            </div>
            <% });} else { %>
            <div class="no-books">
              <h3>
                Não existe livros cadastrados,
                <a href="/registerBooks"
                  >Clique aqui para Cadastrar um livro!</a
                >
              </h3>
            </div>
            <% } %>
          </div>
        </div>
      </section>
      <%- include('components/footer') %>
    </main>
    <%- include('components/script') %>
  </body>
</html>

