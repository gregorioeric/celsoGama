<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>
  <body>
    <main>
      <div class="content-admin">
        <%- include('components/menuAdmin') %>
        <div class="admin-profile">
          <%- include('components/headerAdmin') %>
        </div>
        <div class="content-display">
          <h1>Editar Pagina</h1>
          <div class="content-msg">
            <% if(msgSuccess) { %>
            <div class="msgSuccess">
              <%= msgSuccess %> <a href="/pages/createPages">X</a>
            </div>
            <% } %> <% if(msgError) { %>
            <div class="msgError">
              <%= msgError %> <a href="/pages/createPages">X</a>
            </div>
            <% } %>
          </div>
          <div class="create-pages">
            <form action="/pages/editPage/<%= result.page_id %>" method="post">
              <div class="form-group">
                <div class="btn-create-page">
                  <!-- <button>Cancelar</button> -->
                  <button>Salvar</button>
                </div>
                <div>
                  <input
                    type="text"
                    name="page_title"
                    value="<%= result.page_title %>"
                  />
                </div>
              </div>
              <textarea name="page_content" id="my-expressjs-tinymce-app">
                <%= result.page_content %>
              </textarea>
            </form>
          </div>
        </div>
      </div>
    </main>
    <%- include('components/script') %>
  </body>
</html>
